  "license": "MIT",
  "private": true,
  "scripts": {
    "build:bg": "parcel build src/background/index.ts --dist-dir dist/background",
    "build:options": "parcel build src/options/index.html --dist-dir dist/options --public-url ./",
    "build:newtab": "parcel build src/newtab/index.html --dist-dir dist/newtab --public-url ./",
    "copy:static": "copy manifest.json assets/**/* assets/* dist",
    "build": "run-s build:newtab build:bg build:options",
    "clean": "rimraf dist",
    "dist": "run-s clean build copy:static"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.117",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/rebass": "^4.0.6",
    "@types/rebass__forms": "^4.0.2",
    "ajv-cli": "^3.2.1",
    "copy": "^0.3.2",
    "monaco-editor": "^0.20.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@fortawesome/fontawesome-svg-core": "^1.2.29",
    "@fortawesome/free-brands-svg-icons": "^5.13.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@monaco-editor/react": "^3.4.1",
    "@rebass/forms": "^4.0.6",
    "ajv": "^6.12.3",
    "moment": "^2.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rebass": "^4.0.7",
    "slate": "^0.58.4",
    "slate-react": "^0.58.4"
  },
  "targets": {
    "newtab": {
      "context": "browser",
      "sourceMap": false
    }
  }
